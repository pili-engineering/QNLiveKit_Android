<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:id="@+id/container"
    tools:context=".RoomPushActivity">

    <com.qncube.liveuikit.component.RoomBackGroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.qncube.playerclient.QPlayerTextureRenderView
        android:id="@+id/playerRenderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.qncube.uikitpk.PKPreView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.qncube.uikitpk.PKCoverView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.qncube.uikitlinkmic.MicLinkersView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        tools:background="#99000000"
        tools:layout_width="100dp" />

    <com.qncube.liveuikit.component.RoomCoverViewPage
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>