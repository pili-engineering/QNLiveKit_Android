<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_show_origin3"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_show_origin"
            android:gravity="center"
            android:text="对比"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:visibility="invisible"
            android:layout_gravity="end"
            tools:visibility="visible"
            />
        <TextView
            tools:visibility="visible"
            android:id="@+id/tv_show_origin2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_show_origin"
            android:gravity="center"
            android:text="对比"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="invisible" />

        <RelativeLayout
            tools:visibility="visible"
            android:id="@+id/rv_filter_strength"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:clickable="true"
            android:visibility="invisible"
            tools:background="#fff888"
            >

            <TextView
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffffe"
                android:textSize="16dp" />

            <SeekBar
                android:id="@+id/sb_filter_strength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingRight="10dp"
                android:paddingBottom="7dp"
                android:progressDrawable="@drawable/bg_seekbar_progressbar"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tv_filter_strength"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="100"
                android:textColor="#ffffffe"
                android:textSize="16dp" />
        </RelativeLayout>


        <com.qlive.uiwidghtbeauty.IndicatorSeekBar
            android:id="@+id/beauty_item_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:visibility="invisible"
            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <LinearLayout
                android:id="@+id/ll_base_beauty_options"
                android:layout_width="match_parent"
                android:layout_height="160dp"
               android:layout_gravity="bottom"
                android:background="#80000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_beauty_base"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

            <RelativeLayout
                tools:visibility="visible"
                android:id="@+id/rv_beauty_and_filter_options"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:visibility="invisible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_beauty_options"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="#80000000"
                    android:padding="2dp"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#80ffffff" />
            </RelativeLayout>


            <RelativeLayout
                tools:visibility="visible"
                android:id="@+id/rl_filter_icons"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:background="#80000000"
                android:clickable="true"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/filter_back" />

                <ImageView
                    android:id="@+id/iv_filter_group"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="58dp"
                    android:src="@drawable/icon_scenery_selected" />

                <TextView
                    android:id="@+id/tv_filter_group"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="95dp"
                    android:gravity="center_horizontal"
                    android:text="风景"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_filter_icons"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:scrollbars="none" />
            </RelativeLayout>


            <LinearLayout
                tools:visibility="visible"
                android:layout_gravity="bottom"
                android:id="@+id/ll_filter_groups"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#80000000"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/ll_filter_group_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_filter_group_portrait"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_portrait_unselected" />

                    <TextView
                        android:id="@+id/tv_filter_group_portrait"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="人像"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filter_group_scenery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_filter_group_scenery"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_scenery_unselected" />

                    <TextView
                        android:id="@+id/tv_filter_group_scenery"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="风景"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filter_group_still_life"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_filter_group_still_life"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_still_life_unselected" />

                    <TextView
                        android:id="@+id/tv_filter_group_still_life"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="静物"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filter_group_food"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_filter_group_food"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_food_unselected" />

                    <TextView
                        android:id="@+id/tv_filter_group_food"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="食物"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                tools:visibility="visible"
                android:layout_gravity="bottom"
                android:id="@+id/rl_makeup_icons"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#80000000"
                android:clickable="true"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/filter_back" />

                <ImageView
                    android:id="@+id/iv_makeup_group"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="48dp"
                    android:src="@drawable/icon_scenery_selected" />

                <TextView
                    android:id="@+id/tv_makeup_group"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="88dp"
                    android:gravity="center_horizontal"
                    android:text="风景"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_makeup_icons"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:scrollbars="none" />
            </RelativeLayout>

            <RelativeLayout
                tools:visibility="visible"
                android:layout_gravity="bottom"
                android:id="@+id/rl_makeup_groups"
                android:layout_width="match_parent"
                android:layout_height="160dp"

                android:background="#80000000"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="invisible">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_lip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_lip"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_lip_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_lip"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="口红"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_cheeks"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_lip"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_cheeks"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_cheeks_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_cheeks"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="腮红"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_face"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_cheeks"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_face"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_face_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_face"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="修容"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_brow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_face"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_brow"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_brow_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_brow"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="眉毛"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_eye"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_brow"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_eye"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_eye_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_eye"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="眼影"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_eyeliner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_eye"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_eyeliner"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_eyeline_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_eyeliner"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="眼线"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_eyelash"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_eyeliner"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_eyelash"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_eyelash_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_eyelash"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="眼睫毛"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_makeup_group_eyeball"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="12dp"
                            android:layout_toRightOf="@+id/ll_makeup_group_eyelash"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_makeup_group_eyeball"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="25dp"
                                android:src="@drawable/makeup_eyeball_unselected" />

                            <TextView
                                android:id="@+id/tv_makeup_group_eyeball"
                                android:layout_width="48dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="美瞳"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>



            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="visible"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:background="#80000000"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:scrollbars="none"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                tools:visibility="visible"
                android:layout_gravity="bottom"
                >
                <RelativeLayout
                    android:id="@+id/rl_sticker_options"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="#80000000"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:id="@+id/rv_close_sticker"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:id="@+id/iv_close_sticker"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/close_sticker" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/rv_close_sticker"
                        android:background="#80ffffff" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_sticker_options"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/view_line"
                        android:padding="2dp"
                        android:scrollbars="none" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#80ffffff" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sticker_icons"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:background="#80000000"
                    android:padding="5dp"
                    android:scrollbars="none"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_gravity="bottom|end"
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="27dp"
                android:layout_marginBottom="34dp"
                android:drawableLeft="@drawable/reset"
                android:drawablePadding="5dp"
                android:text="重置"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_show_origin1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_show_origin"
                android:gravity="center"
                android:text="对比"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:visibility="invisible" />


        </FrameLayout>
    </LinearLayout>
    
</FrameLayout>