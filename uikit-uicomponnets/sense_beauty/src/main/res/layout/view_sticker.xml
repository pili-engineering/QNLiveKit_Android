<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sticker_icons"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerVertical="true"
        android:background="#80000000"
        android:padding="5dp"
        android:scrollbars="none"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_sticker_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/rv_sticker_icons"
        android:background="#80000000"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/rv_sticker_icons">

        <RelativeLayout
            android:id="@+id/rv_close_sticker"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/iv_close_sticker"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/close_sticker" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/rv_close_sticker"
            android:background="#80ffffff" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mTitleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view_line"
            android:padding="2dp"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#80ffffff" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>