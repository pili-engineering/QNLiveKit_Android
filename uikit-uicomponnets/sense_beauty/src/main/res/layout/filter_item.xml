<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sensetime="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WrapWrap"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/iv_filter_image"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:gravity="center"
        sensetime:layout_constraintLeft_toLeftOf="parent"
        sensetime:layout_constraintRight_toRightOf="parent"
        sensetime:layout_constraintTop_toTopOf="parent"
        tools:background="#009988" />

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_camera_filter_selected"
        sensetime:layout_constraintBottom_toBottomOf="@id/iv_filter_image"
        sensetime:layout_constraintLeft_toLeftOf="@id/iv_filter_image"
        sensetime:layout_constraintRight_toRightOf="@id/iv_filter_image"
        sensetime:layout_constraintTop_toTopOf="@id/iv_filter_image" />

    <TextView
        android:id="@+id/filter_text"
        style="@style/WrapWrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:lines="1"
        android:maxEms="5"
        android:textSize="12sp"
        sensetime:layout_constraintLeft_toLeftOf="@id/iv_filter_image"
        sensetime:layout_constraintRight_toRightOf="@id/iv_filter_image"
        sensetime:layout_constraintTop_toBottomOf="@id/iv_filter_image"
        tools:text="自然自然自然自然" />

</androidx.constraintlayout.widget.ConstraintLayout>