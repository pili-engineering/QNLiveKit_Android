<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="SmallSp, ContentDescription">

    <ImageView
        android:id="@+id/beauty_item_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:src="@drawable/beauty_sharp_unselected" />

    <TextView
        android:id="@+id/beauty_item_description"
        style="@style/WrapWrap"
        android:layout_marginTop="5dp"
        android:textColor="#555555"
        android:textSize="12sp"
        tools:text="对比度" />

    <TextView
        android:id="@+id/beauty_item_subscription"
        style="@style/WrapWrap"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#555555"
        android:textSize="6sp"
        android:visibility="visible"
        tools:text="333" />
    <!--        android:background="@drawable/bg_beauty_item_subscript"-->

</LinearLayout>
