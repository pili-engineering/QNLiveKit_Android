<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    android:clickable="true"
    android:focusable="true"
    tools:background="#990E0E0E"
    tools:ignore="ContentDescription,HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_action_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_camera_close"
        app:layout_constraintBottom_toBottomOf="@id/cl_action_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_setting_options_switch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_camera_setting"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_img_tryon_options_switch"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_img_tryon_options_switch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/ic_camera_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_scan_options_switch"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/iv_setting_options_switch"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_scan_options_switch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_zxing"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_scale"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/iv_img_tryon_options_switch"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_scale"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_camera_size"
        android:text="@string/set_resolution"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/tv_change_camera"
        app:layout_constraintStart_toEndOf="@id/iv_scan_options_switch"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_triangle_up_resolution"
        style="@style/WrapWrap"
        android:src="@drawable/triangle_up"
        app:layout_constraintBottom_toBottomOf="@id/iv_triangle_up"
        app:layout_constraintLeft_toLeftOf="@id/iv_scale"
        app:layout_constraintRight_toRightOf="@id/iv_scale"
        app:layout_constraintTop_toTopOf="@id/iv_triangle_up" />

    <ImageView
        android:id="@+id/tv_change_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="15dp"
        android:src="@drawable/ic_camera_switch"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_save_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="15dp"
        android:src="@drawable/ic_camera_save_img"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_camera_preview"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="15dp"
        android:src="@drawable/ic_camera_preview"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintRight_toLeftOf="@id/iv_save_img"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_camera_pause"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="15dp"
        android:src="@drawable/ic_camera_pause"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintRight_toLeftOf="@id/iv_save_img"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_triangle_up"
        style="@style/WrapWrap"
        android:src="@drawable/triangle_up"
        app:layout_constraintBottom_toBottomOf="@id/cl_action_bar"
        app:layout_constraintLeft_toLeftOf="@id/iv_setting_options_switch"
        app:layout_constraintRight_toRightOf="@id/iv_setting_options_switch" />

    <TextView
        android:id="@+id/tv_debug_info"
        style="@style/WrapWrap"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_camera_debug"
        android:padding="8dp"
        android:textColor="#3F3F3F"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_action_bar"
        tools:text="单帧耗时：5ms\n帧率：5ms\nCPU占用率：23%"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_tip_bg"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_camera_tip"
        app:layout_constraintTop_toBottomOf="@id/iv_triangle_up"
        tools:background="#990E0E0E" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/ll_perform"
        style="@style/SettingText"
        android:text="@string/set_performance"
        app:drawableTop="@drawable/selector_bar_perform"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toStartOf="@id/ll_language"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_triangle_up"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/ll_language"
        style="@style/SettingText"
        android:text="@string/set_language"
        app:drawableTop="@drawable/selector_bar_language"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toStartOf="@id/ll_tk"
        app:layout_constraintStart_toEndOf="@id/ll_perform"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/ll_tk"
        style="@style/SettingText"
        android:text="@string/set_terms"
        app:drawableTop="@drawable/ic_bar_tk_nor"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toStartOf="@id/ll_replay"
        app:layout_constraintStart_toEndOf="@id/ll_language"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/ll_replay"
        style="@style/SettingText"
        android:text="@string/set_yuv_rgba"
        android:visibility="visible"
        app:drawableTop="@drawable/selector_bar_replay"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toStartOf="@id/ll_camera"
        app:layout_constraintStart_toEndOf="@id/ll_tk"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/ll_camera"
        style="@style/SettingText"
        android:text="Camera2"
        android:visibility="visible"
        android:textColor="#ffffff"
        app:drawableTop="@drawable/selector_bar_camera"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_replay"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/dt_640"
        style="@style/SettingText"
        android:text="640x480"
        app:drawableTop="@drawable/selector_bar_resolution_640"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toStartOf="@id/dt_1280"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/iv_tip_bg"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/dt_1280"
        style="@style/SettingText"
        android:text="1280x720"
        app:drawableTop="@drawable/selector_bar_resolution_1280"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toStartOf="@id/dt_1920"
        app:layout_constraintStart_toEndOf="@id/dt_640"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/dt_1920"
        style="@style/SettingText"
        android:text="1920x1080"
        app:drawableTop="@drawable/selector_bar_resolution_1920"
        app:layout_constraintBottom_toBottomOf="@id/iv_tip_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_tip_bg"
        app:layout_constraintStart_toEndOf="@id/dt_1280"
        app:layout_constraintTop_toTopOf="@id/iv_tip_bg" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/resolutionView"
        style="@style/WrapWrap"
        android:visibility="invisible"
        app:constraint_referenced_ids="iv_tip_bg, dt_640,dt_1280, dt_1920, iv_triangle_up_resolution"
        tools:visibility="invisible" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/gp_preview"
        style="@style/WrapWrap"
        app:constraint_referenced_ids="iv_setting_options_switch,iv_scale,tv_change_camera "
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>