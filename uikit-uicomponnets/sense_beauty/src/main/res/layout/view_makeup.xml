<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    tools:ignore="HardcodedText,ContentDescription">

    <sensetime.senseme.com.effects.view.widget.TextThumbSeekBar
        android:id="@+id/sb_strength"
        style="@style/TextThumbSeekBarStyle"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_show_original"
        style="@style/BtnOriginalStyle"
        app:layout_constraintBottom_toBottomOf="@id/sb_strength"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sb_strength" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mTitleRecycleView"
        style="@style/MatchWrap"
        android:layout_centerVertical="true"
        android:background="#802A2A2A"
        android:padding="2dp"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sb_strength" />

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="#B32A2A2A"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/mTitleRecycleView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mContentRecycler"
        style="@style/MatchWrap"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mTitleRecycleView" />

    <sensetime.senseme.com.effects.view.widget.DrawableTextView
        android:id="@+id/dt_clear"
        style="@style/ZeroBtnStyle"
        android:text="清零"
        app:drawableLeft="@drawable/ic_camera_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>