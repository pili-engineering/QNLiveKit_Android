<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="22dp">

    <LinearLayout
        android:id="@+id/ll_style1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/si_style1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tryon_style1"
            app:shapeAppearanceOverlay="@style/circleStyle"
            app:strokeColor="@color/color_dd90fa"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="@string/tryon_style1"
            android:textColor="#525252"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/si_style1"
            app:layout_constraintTop_toBottomOf="@id/si_style1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_style1"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/si_style2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tryon_style2"
            app:shapeAppearanceOverlay="@style/circleStyle"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="@string/tryon_style2"
            android:textColor="#525252"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/si_style1"
            app:layout_constraintTop_toBottomOf="@id/si_style1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>