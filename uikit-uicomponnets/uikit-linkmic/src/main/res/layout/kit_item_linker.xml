<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flLinkerContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <FrameLayout
        android:id="@+id/flAudioMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="8dp">

        <com.qlive.uikitcore.view.CircleImageView
            android:id="@+id/ivAvatarInner"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical|end"

            app:civ_border_color="#3EDCEB"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/ivMicStatusInner"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="28dp"
            android:src="@drawable/kit_select_seat_mic" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/tempMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="#66000000"
        tools:layout_height="100dp"
        tools:layout_width="100dp">

        <ImageView
            android:id="@+id/ivMicStatusMix"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="6dp"
            android:src="@drawable/kit_select_seat_mic" />
    </FrameLayout>


</FrameLayout>